<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_list_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_list_launch_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_list_mission_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_list_launch_image"/>

        <TextView
            android:id="@+id/tv_list_rocket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rocket name"
            app:layout_constraintTop_toBottomOf="@+id/tv_list_mission_name"
            app:layout_constraintStart_toEndOf="@+id/iv_list_launch_image"/>

        <TextView
            android:id="@+id/tv_list_site_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="site"
            app:layout_constraintTop_toBottomOf="@+id/tv_list_rocket_name"
            app:layout_constraintStart_toEndOf="@+id/iv_list_launch_image"/>

        <TextView
            android:id="@+id/tv_list_launch_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            app:layout_constraintTop_toBottomOf="@+id/tv_list_site_name"
            app:layout_constraintStart_toEndOf="@id/iv_list_launch_image"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>